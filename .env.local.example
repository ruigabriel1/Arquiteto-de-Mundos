# Configurações para desenvolvimento local com IA
DEBUG=True
SECRET_KEY=development_key_change_in_production
DATABASE_URL=sqlite:///db.sqlite3

# Configurações de IA para o Arquiteto de Mundos
# Descomente e configure pelo menos uma das opções abaixo:

# OPÇÃO 1: OpenAI (requer API key paga)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODELO=gpt-4

# OPÇÃO 2: Anthropic Claude (requer API key paga)  
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODELO=claude-3-sonnet-20240229

# OPÇÃO 3: Modelo Local (grátis - Ollama/LM Studio)
# LOCAL_AI_URL=http://localhost:11434
# LOCAL_AI_MODELO=llama2
# LOCAL_AI_API_KEY=

# Configurações de IA GM
IA_GM_CACHE_TIMEOUT=3600
IA_GM_MAX_TOKENS=2000
IA_GM_TEMPERATURE=0.8
IA_GM_MAX_RETRIES=3

# Se nenhuma IA estiver configurada, o sistema usará fallbacks estáticos
# Para uma experiência completa, configure pelo menos uma das opções acima