# Unified Chronicles - Configurações de Ambiente
# ==============================================

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://uc_user:uc_password@localhost:5432/unified_chronicles

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# AI API Keys (Mantenha em segredo!)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Image Generation API
DALLE_API_KEY=your-dalle-api-key-here

# Email Configuration (Para produção)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Ollama/Local AI Configuration
LOCAL_AI_URL=http://localhost:11434
